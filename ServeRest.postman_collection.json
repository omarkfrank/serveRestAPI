									"pm.test(\"Validar o Id retornado\", function(){\r",
									"    console.log(pm.globals.get(\"UserId\"))\r",
									"    console.log(pm.response.json()._id)\r",
									"\r",
									"    pm.expect(pm.response.json()._id).to.eql(pm.globals.get(\"UserId\"))\r",
